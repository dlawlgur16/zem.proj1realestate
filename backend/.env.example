# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database
# Supabase PostgreSQL connection string (use Pooler URL for better performance)
DATABASE_URL=postgresql://postgres.PROJECT_REF:YOUR_PASSWORD@aws-1-ap-southeast-1.pooler.supabase.com:5432/postgres

# Server
PORT=5001
NODE_ENV=development

# JWT Secret (REQUIRED - use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_change_this

# API Keys (optional for backend)
GEMINI_API_KEY=your_gemini_api_key_here
